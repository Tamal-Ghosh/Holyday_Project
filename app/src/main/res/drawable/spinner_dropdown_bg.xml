<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:color="@color/primary" android:width="2dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Dropdown arrow area on the right -->
    <item android:gravity="end" android:width="50dp" android:height="48dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary"/>
            <corners android:topRightRadius="6dp" android:bottomRightRadius="6dp"/>
        </shape>
    </item>
    <!-- Dropdown arrow icon -->
    <item android:gravity="center|end" android:width="30dp" android:height="30dp" android:right="10dp">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M7,10l5,5 5,-5z" />
        </vector>
    </item>
</layer-list>
