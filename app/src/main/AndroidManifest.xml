<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for network access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShipVoyage">

        <!-- Admin launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.UserTypeActivity"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".ui.admin.AdminMainActivity"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".ui.admin.ManageShipsActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.ManageRoomsActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.ManageToursActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.ManageTourInstancesActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.ManageFeaturedPhotosActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.ViewBookingsActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.CustomerListActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />
        <activity
            android:name=".ui.admin.AdminProfileActivity"
            android:exported="false"
            android:hardwareAccelerated="false" />

        <!-- FileProvider for PDF sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
